
<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<head>

  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <meta name="author" content="OJASAWEB" />

  <!-- Stylesheets
  ============================================= -->  
  <link href="http://fonts.googleapis.com/css?family=Lato:300,400,400italic,600,700|Raleway:300,400,500,600,700|Crete+Round:400italic" rel="stylesheet" type="text/css" />
  
  <%= stylesheet_link_tag 'css/bootstrap.css', 'style.css', 'css/dark.css', 'css/font-icons.css', 'css/animate.css', 'css/magnific-popup.css', 'css/responsive.css', 'css/datepicker.css' %>
  
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
  
  <!--[if lt IE 9]>
  <script src="http://css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js"></script>
  <![endif]-->

  <!-- External JavaScripts
  ============================================= -->
  
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag 'js/plugins.js', 'js/bootstrap-datepicker.js' %>
  <!-- Document Title
  ============================================= -->
	<title>OJASA</title>
  <link rel="shortcut icon" href="<%= asset_path ApplicationController::SITE_ICON %>"/>

</head>
<body class="stretched">

    <!-- Document Wrapper
    ============================================= -->
    <div id="wrapper" class="clearfix">

        <!-- Header
        ============================================= -->
        <header id="header" class="page-section">

            <div id="header-wrap">

                <div class="container clearfix">

                    <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>

                    <!-- Logo
                    ============================================= -->
                    <div id="logo">
                        <a href="/" class="standard-logo" data-dark-logo="<%= asset_path 'images/logo-beta.png' %>" alt='OJASA'><%= image_tag "images/logo-beta.png", alt: 'OJASA' %></a>
                        <a href="/" class="retina-logo" data-dark-logo="<%= asset_path 'images/logo@2x-beta.png' %>" alt='OJASA'><%= image_tag "images/logo@2x-beta.png", alt: 'OJASA' %></a>
                    </div><!-- #logo end -->

                    <!-- Primary Navigation
                    ============================================= -->
                    <nav id="primary-menu">

                        <ul class="one-page-menu">
                            <li class="current"><%= link_to raw('<div>Home</div>'), home_page_url, {'data-href' => '#header'} %></li>
                            <li><%= link_to raw('<div>Services</div>'), list_services_url, {'data-href' => '#section-features'} %></li>
                            <!--li><a href="#" data-href="#section-pricing"><div>Contact Us</div></a></li-->
                            
                            <% if logged_in? %>
                        		  <li><%= link_to raw('<div class="loginbtn">LOGOUT</div>'), logout_accounts_url, {"data-href" => "#section-testimonials"} %></li>
                        		<% else %>
                        		  <li><%= link_to raw('<div class="loginbtn">LOGIN</div>'), login_accounts_url, {"data-href" => "#section-testimonials"} %></li>
                        		<% end %>
                        		
                            
                        </ul>

                    </nav><!-- #primary-menu end -->

                </div>

            </div>

        </header><!-- #header end -->

        <%= yield %>

        <!-- Footer
        ============================================= -->
        <footer id="footer" class="dark">

            <!-- Copyrights
            ============================================= -->
            <div id="copyrights">

                <div class="container clearfix">

                    <div class="col_half">
                        <!--div class="copyrights-menu copyright-links clearfix">
                            <a href="#">Home</a><a href="#">About</a><a href="#">Job</a><a href="#">Contact</a>
                        </div-->
                        Copyrights &copy; 2015 PT. Gamma Teknologi Prima. All Rights Reserved.
                    </div>

                    <div class="col_half col_last tright">
                        <!--div class="fright clearfix">
                            <a href="#" class="social-icon si-small si-borderless nobottommargin si-facebook">
                                <i class="icon-facebook"></i>
                                <i class="icon-facebook"></i>
                            </a>

                            <a href="#" class="social-icon si-small si-borderless nobottommargin si-twitter">
                                <i class="icon-twitter"></i>
                                <i class="icon-twitter"></i>
                            </a>
                        </div-->
                    </div>

                </div>

            </div><!-- #copyrights end -->

        </footer><!-- #footer end -->

    </div><!-- #wrapper end -->

    <!-- Go To Top
    ============================================= -->
    <div id="gotoTop" class="icon-angle-up"></div>
            
    <script src="https://maps.google.com/maps/api/js?sensor=true&libraries=places&callback=initAutocomplete" type="text/javascript"></script>
    <script src="/global/plugins/gmaps/gmaps.min.js" type="text/javascript"></script>

    <%= javascript_include_tag "js/autocomplete-maps.js", "js/functions.js" %>
    <script type="text/javascript">
       $('.datepicker').datepicker().on('changeDate', function(e){
         (e.viewMode=='days') ? $(this).datepicker('hide') : '';
         });
     </script>

</body>
</html>

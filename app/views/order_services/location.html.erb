<section id="slider" class="slider-parallax full-screen" style="background: url(<%= service_background_image %>) center bottom; background-size:cover;">
  
      <div class="container clearfix">
    
          <div class="vertical-middle">

            <div class="heading-block center nobottomborder">
                <h1 data-animate="fadeInUp" class="oj-title"><%= service_name %></h1>
                <span data-animate="fadeInUp" data-delay="300" class="fadeInUp animated oj-title"><%= service_description %></span>
            </div>

            <%= render partial: 'layouts/messages' %>

            <div class="panel-body divcenter" style="max-width: 600px;">
                <%= form_tag type_order_services_url, method: :get, class: "nobottommargin landing-wide-form clearfix", id: "cleaning-form" do %>
                  <%= hidden_field_tag "category_id", service_category_id %>
                  <div class="col_three_fifth nobottommargin">
                    <div class="col_full">
                  		<%= select_tag "location", services_location_options_html, class: "input-xlarge select2me bs-select sm-form-control input-lg not-dark", placeholder: "Choose Your Location", id: 'leaning-form-price' %>
                    </div>
                  </div>
                  <div class="col_two_fifth col_last nobottommargin">
                    <button class="button button-3d button-large button-rounded button-blue btn-block nomargin" value="submit" ype="submit" style="">SUBMIT</button>
                  </div>
                <% end %>
            </div>

        </div>

    </div>

</section><!-- #content end -->

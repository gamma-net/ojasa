<section id="slider" class="slider-parallax full-screen" style="background: url(/assets/images/bghome.jpg) center bottom; background-size:cover;">

     <div class="container clearfix">
       
         <div class="vertical-middle">

           <%= render partial: 'layouts/messages' %>

             <div class="heading-block center nobottomborder">
                 <h1 data-animate="fadeInUp" class="oj-title"><%= service_name %></h1>
                 <span data-animate="fadeInUp" data-delay="300" class="fadeInUp animated oj-title"><%= service_description %></span>
             </div>

             <div class="panel-body divcenter" style="max-width: 550px;">
                 <%= form_tag request_order_services_url, method: :post, class: "nobottommargin", name: 'cleaning-form', id: 'cleaning-form' do %>
                     <div class="col_full">
                          <input name="order[address]" class="controls form-control placeholder-no-fix required input-lg not-dark" type="text" placeholder="input your address" id="autocomplete" onFocus="geolocate()">
                     </div>
                     <div class="col_full">
                         <input name="order[detail]" class="controls form-control placeholder-no-fix required input-lg not-dark" type="text" placeholder="input your address detail" id="cleaning-form-address" >
                     </div>
                     <div class="col_two_third">
                        <%= text_field_tag "order[requested_at][date]", nil, class: "form-control input-lg", size: 16, placeholder: 'select date', id: "cleaning-form-date", name: "cleaning-form-date" %>
               					<!--span class="input-group-btn" hidden>
                				<button class="btn default date-set" type="button" hidden="hidden"></button>
                				</span-->
                			   <!--input type="text" id="cleaning-form-date" name="cleaning-form-date" value="" placeholder="when" class="form-control input-lg" /-->
                     </div>
                     <div class="col_one_third col_last">
                         <input type="text" id="cleaning-form-date" name="cleaning-form-time" value="" placeholder="select time" class="form-control input-lg" />
                     </div>
                     <div class="col_full">
                       <%= service_pricing %>
                     </div>

                     <div class="col_full nobottommargin">
                         <button class="button button-3d button-large button-aqua btn-block nomargin" id="cleaning-form-submit" name="cleaning-form-submit" value="submit">SUBMIT</button>
                     </div>
                     <a href="#" class="fleft forgot">*Whats included?</a>
                 <% end %>
             </div>
         </div>

     </div>

 </section>

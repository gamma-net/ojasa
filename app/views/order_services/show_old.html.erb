<!-- BEGIN LOGIN -->
<div class="content">
  
  <!-- BEGIN REGISTRATION FORM -->
  <%= form_tag request_order_services_url, method: :post, multipart: true do %>
  	<h3>Order</h3>
  	<p class="hint">
  		 Enter request service details below:
  	</p>   	
  	<div class="form-group">
  		<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
  		<label class="control-label visible-ie8 visible-ie9">Location</label>
  	  <input name="service[location]" id="pac-input" class="controls form-control placeholder-no-fix required" type="text" placeholder="Location">
   		<div id="map" style="height:200px;">
   	</div>
   	<br />
   	<div class="form-group">
  		<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
  		<label class="control-label visible-ie8 visible-ie9">Details</label>
  		<%= text_field_tag 'service[location_details]', nil, {class: "form-control placeholder-no-fix required", placeholder: "Location Details"} %>
  	</div>
  	<div class="form-group">
  		<label class="control-label visible-ie8 visible-ie9">Services</label>
  		<%= select_tag "service[category_id]", services_options, class: "bs-select form-control" %>
  	</div>
  	<div class="form-group">
  		<label class="control-label visible-ie8 visible-ie9">Service Date</label>
  		<div class="col-md-6">
  			<div class="input-group input-medium date date-picker" data-date-start-date="+0d">
  				<%= text_field_tag "service[requested_at][date]", nil, class: "form-control", size: 16, readonly: 'readonly', placeholder: 'Select Service Date' %>	
  				<span class="input-group-btn">
  				<button class="btn default date-set" type="button" hidden="hidden"><i class="fa fa-calendar"></i></button>
  				</span>
  			</div>
  		</div>
  		<div class="col-md-6">
  			<div class="input-group">
  				<%= text_field_tag "service[requested_at][time]", nil, class: "form-control timepicker timepicker-24", size: 16, readonly: 'readonly', placeholder: 'Select Service Time' %>	
  				<span class="input-group-btn">
  				<button class="btn default" type="button" hidden="hidden"><i class="fa fa-clock-o"></i></button>
  				</span>
  			</div>
  		</div>
  	</div>
   	
  	<div class="form-actions">
  		<%= button_tag 'Submit', name: 'sign_up', class: "btn btn-success uppercase pull-right", id: "register-submit-btn" %>  
  	</div>
  <% end %>
  <!-- END REGISTRATION FORM -->
  
</div>
<!-- END LOGIN -->
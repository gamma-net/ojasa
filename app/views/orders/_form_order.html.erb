    <div class="form-group form-md-line-input<%' has-error' unless @order.errors[:category_id].blank? %>">
  		<label class="col-md-3 control-label" for="form_control_1">Category</label>
  		<div class="col-md-9">
        <%= select_tag "order[category_id]", options_for_select(category_options, @order.category_id), {class: "form-control input-xlarge select2me#{' error' unless @order.errors[:category_id].blank?}", "data-placeholder" => "Select Category..."} %>

<div class="form-body">
	<div class="form-group form-md-line-input<%= ' has-error' unless @service.errors[:name].blank? %>">
		<label class="col-md-2 control-label" for="form_control_1">Name</label>
		<div class="col-md-10">
      <%= f.text_field :name, class: "form-control#{' error' unless @service.errors[:name].blank?}", placeholder: 'Enter Name', id: 'form_control_1' %>			
      <div class="form-control-focus"></div>
		</div>
	</div>
	<div class="form-group form-md-line-input<%= ' has-error' unless @service.errors[:category_id].blank? %>">
		<label class="col-md-2 control-label" for="form_control_1">Category</label>
		<div class="col-md-10">
      <%= select_tag "service[category_id]", options_for_select(category_options, @service.category_id), {class: "form-control input-xlarge select2me#{' error' unless @service.errors[:category_id].blank?}", "data-placeholder" => "Select Category..."} %>
      <div class="form-control-focus"></div>
		</div>
	</div>
	<div class="form-group form-md-line-input">
	  <label class="col-md-2 control-label" for="form_control_1">Location</label>
		<div class="col-md-10">
      <%= select_tag "service[location]", options_for_select(services_location_options, :selected => @service.location.to_s.split(',')), {class: "form-control input-xlarge select2me", multiple: true, id: 'form_control_1'} %>
			<div class="form-control-focus"></div>
		</div>
	</div>
	<div class="form-group form-md-line-input">
	  <label class="col-md-2 control-label" for="form_control_1">Working Days</label>
		<div class="col-md-10">
      <%= select_tag "service[days]", options_for_select(services_days_options, :selected => @service.days.to_s.split(',')), {class: "form-control input-xlarge select2me", multiple: true, id: 'form_control_1'} %>
			<div class="form-control-focus"></div>
		</div>
	</div>
	<div class="form-group form-md-line-input<%= ' has-error' unless @service.errors[:contact_number].blank? %>">
		<label class="col-md-2 control-label" for="form_control_1">Contact Number</label>
		<div class="col-md-10">
      <%= f.text_field :contact_number, class: "form-control#{' error' unless @service.errors[:contact_number].blank?}", placeholder: 'Enter Contact Number', id: 'form_control_1' %>			
      <div class="form-control-focus"></div>
		</div>
	</div>
	<div class="form-group form-md-line-input<%= ' has-error' unless @service.errors[:description].blank? %>">
		<label class="col-md-2 control-label" for="form_control_1">Description</label>
		<div class="col-md-10">
      <%= f.text_area :description, class: "form-control autosizeme#{' error' unless @service.errors[:description].blank?}", placeholder: 'Enter Description', id: 'form_control_1' %>			
      <div class="form-control-focus"></div>
		</div>
	</div>
	<div class="form-group form-md-line-input<%= ' has-error' unless @service.errors[:keyword].blank? %>">
		<label class="col-md-2 control-label" for="form_control_1">Keyword</label>
		<div class="col-md-10">
      <%= f.text_field :keyword, class: "form-control#{' error' unless @service.errors[:keyword].blank?}", placeholder: 'Enter Keyword', id: 'form_control_1' %>			
      <div class="form-control-focus"></div>
		</div>
	</div>
	<div class="form-group form-md-line-input<%= ' has-error' unless @service.errors[:open_time].blank? %>">
		<label class="col-md-2 control-label" for="form_control_1">Open Time</label>
		<div class="col-md-6">
		  <div class="input-group input-medium">
  			<%= f.text_field :open_time, value: time_value(@service.open_time), class: "form-control#{' error' unless @service.errors[:open_time].blank?} timepicker timepicker-24", size: 16, placeholder: 'Select Open Time' %>	
  			<!--span class="input-group-btn">
  			<button class="btn default" type="button"><i class="fa fa-clock-o"></i></button>
  			</span-->
  		</div>
  	</div>
  </div>
  <div class="form-group form-md-line-input<%= ' has-error' unless @service.errors[:publish_at].blank? %>">
		<label class="col-md-2 control-label" for="form_control_1">Publish Time</label>
		<div class="col-md-6">
			<div class="input-group date form_datetime">
				<%= f.text_field :publish_at, value: datetime_value(@service.publish_at), class: "form-control#{' error' unless @service.errors[:publish_at].blank?}", size: 16, placeholder: 'Select Publish Time' %>	
				<span class="input-group-btn">
				<button class="btn default date-set" type="button"><i class="fa fa-calendar"></i></button>
				</span>
			</div>
			<!-- /input-group -->
		</div>
	</div>
  <div class="form-group form-md-line-input<%= ' has-error' unless @service.errors[:retract_at].blank? %>">
		<label class="col-md-2 control-label" for="form_control_1">Retract Time</label>
		<div class="col-md-6">
			<div class="input-group date form_datetime">
				<%= f.text_field :retract_at, value: datetime_value(@service.retract_at), class: "form-control#{' error' unless @service.errors[:retract_at].blank?}", size: 16, placeholder: 'Select Retract Time' %>	
				<span class="input-group-btn">
				<button class="btn default date-set" type="button"><i class="fa fa-calendar"></i></button>
				</span>
			</div>
			<!-- /input-group -->
		</div>
	</div>
</div>

    <%= render partial: 'services/header', locals: {breadcrumbs: []} %>
    
    <%= form_tag  sort_admin_contents_services_url, {role: 'form', method: 'post'} do |f| %>
    
    <div class="row">
  		<div class="col-md-offset-9 col-md-3">
        <%= link_to 'Search',  searches_admin_contents_services_url(category: 'all'), class: "btn btn green" %>
        <%= button_tag 'Sort', type: 'submit', class: "btn btn-primary" %>
      </div>
    </div>
    
    <!-- BEGIN PAGE CONTENT-->
		<div class="row">
			<div class="col-md-12">
				<!-- BEGIN SAMPLE TABLE PORTLET-->
				<div class="portlet">
					<div class="portlet-title">
						<div class="caption">
							<i class="fa fa-calendar"></i>Services
						</div>
						<div class="tools">
						  <%= link_to raw('<i class="fa fa-plus"></i>'), new_admin_contents_service_url, alt: "Add" %>              
						  <a class="fullscreen" href="javascript:;" data-original-title="" title=""></a>
         			<a href="javascript:;" class="collapse"></a>
						</div>
					</div>
					<div class="portlet-body">
						<div class="table-scrollable">
							<table class="table table-striped table-bordered table-advance table-hover">
							<thead>
							<tr>
								<th><i class="fa fa-sort"></i> Sort</th>
								<th><i class="fa fa-info"></i> Name</th>
								<th class="col-md-6"><i class="fa fa-ellipsis-h"></i> Description</th>
								<th>&nbsp;</th>
							</tr>
							</thead>
							<tbody>
							  <% @services.each do |service| %>
							  <%= hidden_field_tag "service[sort][#{service.id}][old]", service.sort %>
							  <tr>
  								<td><%= text_field_tag "service[sort][#{service.id}][new]", service.sort, class: 'form-control-size', placeholder: 'Sort #', size: 3, maxlength: 3 %></td>
                  <td><%= service.name %></td>
                  <td><%= service.description %></td>
                  <td>
                    <%= link_to raw('<i class="icon-pencil"> Edit</i>'), edit_admin_contents_service_url(id: service.id), class: "btn btn-warning btn-xs" %>
                    <%= link_to raw('<i class="icon-trash"> Delete</i>'), admin_contents_service_url(id: service.id), class: "btn btn-danger btn-xs", method: :delete, data: { confirm: "Are you sure you want to delete this service?" } %>
                  </td>
  							</tr>
							  <% end %>
							</tbody>
							</table>
						</div>
					</div>
				</div>
				<!-- END SAMPLE TABLE PORTLET-->
			</div>
		</div>
		<!-- END PAGE CONTENT-->
		<% end %>
